<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anasayfa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/proffoto"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            app:srcCompat="@drawable/kitap"
            tools:srcCompat="@drawable/kitap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnProfFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profil fotoğrafı seç" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnGunluk"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_input_get" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnalarmm"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="159dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/muzikg" />

            <ImageButton
                android:id="@+id/btnCal"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/btnDuraklat"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_pause" />

        </LinearLayout>

        <Button
            android:id="@+id/btnbildirim"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="Bildirim" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>